#include <iostream>
using namespace std;
int main() {
    
    float billamount;
    float discount;
   
    cout<<"enter the total bill amount:";
    cin>>billamount;
     cout<<"discount:";
    cin>>discount;
    if(billamount<100){
        cout<<"no discount";
    }
    else if (billamount>=100 && billamount<500){
        discount=billamount*10/100;
        
    }
    else{
        discount=billamount*20/100;
    }
    cout<<"after discount amount is:"<< billamount-discount;
    
    return 0;
}
